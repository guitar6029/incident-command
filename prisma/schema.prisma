generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum EmployeeRole {
  IT_HELP
  SYSTEM
  NETWORK
  SRE
  HR
}

enum EmployeeLevel {
  L1
  L2
  L3
}

model Employee {
  id        String        @id @default(uuid())
  name      String
  email     String        @unique
  role      EmployeeRole
  level     EmployeeLevel
  active    Boolean       @default(true)
  onCall    Boolean       @default(false)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
}
